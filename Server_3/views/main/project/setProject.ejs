<link rel="stylesheet" href="/css/main/project/addProject.css" />
<script src="/js/main/project/configProject.js" defer></script>

<div class="add-project-container">
  <div class="form-wrapper">
    <div class="form-header">
      <h2><%= (flag == "add" ? "Add new" : "Edit") %> project</h2>
      <span class="required-note">Required fields are marked with an asterisk (*).</span>
    </div>

    <form action="/dashboard/project/<%= flag %>Project" id="projectForm" method="POST">
      <% if(locals.id) { %>
        <input type="hidden" name="projectId" value="<%= id %>">
      <% } %>
      <div class="form-group">
        <input type="text" id="projectName" name="projectName" class="form-input" placeholder="Project name *" value="<%= locals.projectName ? projectName : '' %>" />
      </div>

      <div class="form-group">
        <textarea id="shortDescription" name = "shortDescription" class="form-input textarea" placeholder="Short description" rows="2"><%= locals.shortDescription ? shortDescription : '' %></textarea>
      </div>

      <div class="form-group row">
        <label class="form-label">Thumbnail</label>
        <input type="file" class="btn-outline" name="" id="" value="Add File" multiple>
      </div>

      <div class="form-group row">
        <label class="form-label">Pages
          <span class="sub-label">( Optional ) [ Limited 10 pages ]</span>
          <br>
          <input type="text" name="pageName" class="form-input" id="pageName" placeholder="Enter page name">
        </label>
        <div id="pageList"></div>
      </div>

      <div class="form-group visibility-group">
        <div class="visibility-info">
          <label class="form-label">Choose visibility *</label>
          <span class="sub-label">Choose who can see this project</span>
        </div>

        <div class="toggle-wrapper" id="switchVisibility">
          <span class="toggle-label active">Public<svg xmlns="http://www.w3.org/2000/svg" id="Outline" viewBox="0 0 24 24"><path d="M19,8.424V7A7,7,0,0,0,5,7V8.424A5,5,0,0,0,2,13v6a5.006,5.006,0,0,0,5,5H17a5.006,5.006,0,0,0,5-5V13A5,5,0,0,0,19,8.424ZM7,7A5,5,0,0,1,17,7V8H7ZM20,19a3,3,0,0,1-3,3H7a3,3,0,0,1-3-3V13a3,3,0,0,1,3-3H17a3,3,0,0,1,3,3Z"/><path d="M12,14a1,1,0,0,0-1,1v2a1,1,0,0,0,2,0V15A1,1,0,0,0,12,14Z"/></svg></span>
          <label class="switch">
            <input type="checkbox"/>
            <span class="slider round"></span>
          </label>
          <span class="toggle-label"><svg xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="0 0 24 24"><path d="m10,15v2c0,.553-.448,1-1,1s-1-.447-1-1v-2c0-.553.448-1,1-1s1,.447,1,1Zm13.123-9.006c-.539.06-1.043-.336-1.103-.885-.191-1.744-1.737-3.109-3.52-3.109-1.93,0-3.5,1.57-3.5,3.5v2.918c1.764.773,3,2.536,3,4.582v6c0,2.757-2.243,5-5,5H5c-2.757,0-5-2.243-5-5v-6c0-2.757,2.243-5,5-5h8v-2.5c0-3.032,2.467-5.5,5.5-5.5,2.834,0,5.202,2.103,5.508,4.891.06.549-.336,1.043-.885,1.104Zm-10.123,4.006H5c-1.654,0-3,1.346-3,3v6c0,1.654,1.346,3,3,3h8c1.654,0,3-1.346,3-3v-6c0-1.654-1.346-3-3-3Z"/></svg>
            Private
          </span>
        </div>
      </div>

      <div class="form-actions">
        <a href="/dashboard/project" class="btn-outline wide" style="
                      text-decoration: none;
                      display: flex;
                      justify-content: center;
                      align-items: center;
                    ">
          Cancel
        </a>
        <button type="submit" class="btn-fill wide"><%= (flag == "add" ? "Add new" : "Edit") %> Project</button>
      </div>
    </form>
  </div>
</div>