<h1 class="auth-title"><%= __('forgotTitle') %></h1>

<form action="/auth/forgot-password" method="POST" id="userForm">
  <p><%= __('forgotErrorMsg') %></p>

  <div class="input-group">
    <input
      type="email"
      name="useremail"
      placeholder="E-mail"
      class="input-field"
      required
    />
  </div>

  <button type="submit" class="btn-submit"><%= __('forgotButtonMsg') %></button>
</form>

<div class="auth-footer">
  <%= __('forgotReturnMsg') %> <a href="/auth/signin"><%= __('signinTitle') %></a>
</div>
